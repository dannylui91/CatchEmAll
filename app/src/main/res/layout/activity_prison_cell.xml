<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_prison_cell"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.jonathancolon.catchemall.PrisonCell">

    <RelativeLayout
        android:id="@+id/skintone_layer"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/skintone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prisoner_skintone_2_300_180"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/eye_layer">
        <ImageView
            android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prisoner_eyes_brown_300_180"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <!--  Place the objects you want on the top here -->
        <RelativeLayout
            android:id="@+id/hair_layer"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/hair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/prisoner_hair_combover_black_300_180"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/beard_layer"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/beard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <!--  Place the objects you want on the bottom here -->
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/accessory_layer"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/accessory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <!--  Place the objects you want on the bottom here -->
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <Button
                android:id="@+id/prisoner_button"
                android:text="Generate Prisoner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <!--  Place the objects you want on the bottom here -->
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
